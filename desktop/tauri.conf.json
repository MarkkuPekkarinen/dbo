{
  "build": {
    "beforeBuildCommand": "VITE_ENV=tauri npm --prefix frontend run build",
    "beforeDevCommand": "VITE_ENV=tauri npm --prefix frontend run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../frontend/dist"
  },
  "package": {
    "productName": "DBO Studio",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "public.app-category.developer-tools",
      "copyright": "The MIT License (MIT) Copyright (c) 2022 - present, DBO Studio",
      "deb": {
        "depends": []
      },
      "externalBin": ["assets/dbo"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.dbostudio.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "license": "../LICENSE"
      },
      "resources": [],
